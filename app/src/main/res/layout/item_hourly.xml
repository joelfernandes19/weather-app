<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tvHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/dark"
            app:layout_constraintStart_toStartOf="parent" />

    <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvHour"
            app:layout_constraintStart_toStartOf="@+id/tvHour"
            app:layout_constraintEnd_toEndOf="@+id/tvHour"/>

    <TextView
            android:id="@+id/tvTempAtHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/imgIcon"
            app:layout_constraintStart_toStartOf="@+id/imgIcon"
            app:layout_constraintEnd_toEndOf="@+id/imgIcon"/>

    <TextView
            android:id="@+id/tvCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvTempAtHour"
            app:layout_constraintStart_toStartOf="@+id/tvTempAtHour"
            app:layout_constraintEnd_toEndOf="@+id/tvTempAtHour"/>

</androidx.constraintlayout.widget.ConstraintLayout>